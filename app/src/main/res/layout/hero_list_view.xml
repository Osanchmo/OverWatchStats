<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/heroPortrait"
        android:layout_width="113dp"
        android:layout_height="109dp"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/avatar"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <com.example.a21753725a.overwatchstats.CustomTextView
        android:id="@+id/playedTime"
        android:layout_width="233dp"
        android:layout_height="29dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="36dp"
        android:text="TextView"
        android:textSize="30sp"
        app:layout_constraintLeft_toRightOf="@+id/heroPortrait"
        app:layout_constraintTop_toBottomOf="@+id/heroName" />

    <com.example.a21753725a.overwatchstats.CustomTextView
        android:id="@+id/heroName"
        android:layout_width="233dp"
        android:layout_height="29dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="4dp"
        android:text="TextView"
        android:textSize="30sp"
        app:layout_constraintLeft_toRightOf="@+id/heroPortrait"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>