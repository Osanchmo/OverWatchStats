<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.a21753725a.overwatchstats.ProfileActivty$PlaceholderFragment">

    <ImageView
        android:layout_width="128dp"
        android:layout_height="128dp"
        app:srcCompat="@drawable/avatar"
        android:id="@+id/avatarImg"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        app:layout_constraintTop_toTopOf="@+id/borderImg"
        android:layout_marginTop="62dp"
        android:contentDescription="avatar image" />

    <ImageView
        android:layout_height="256dp"
        app:srcCompat="@drawable/marco"
        android:id="@+id/borderImg"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="256dp"
        android:contentDescription="border image" />

    <ImageView
        android:layout_width="256dp"
        android:layout_height="128dp"
        app:srcCompat="@drawable/star"
        android:id="@+id/star"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        app:layout_constraintTop_toTopOf="@+id/avatarImg"
        android:layout_marginTop="46dp"
        android:contentDescription="star image" />

    <com.example.a21753725a.overwatchstats.CustomTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/userName"
        android:fontFamily="sans-serif"
        android:textSize="40sp"
        android:text="uname"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        app:layout_constraintTop_toTopOf="@+id/borderImg"
        android:layout_marginTop="8dp" />

    <com.example.a21753725a.overwatchstats.CustomTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/type"
        android:fontFamily="sans-serif"
        android:textSize="40sp"
        android:text="RANKED"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginTop="48dp"
        app:layout_constraintTop_toBottomOf="@+id/avatarImg" />

    <com.example.a21753725a.overwatchstats.CustomTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lostN"
        android:textSize="24sp"
        android:text="LOST:"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/rnkdLost"
        android:textColor="#F40000" />

    <com.example.a21753725a.overwatchstats.CustomTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rnkdLost"
        android:textSize="24sp"
        android:text="LOST GAMES"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/winN"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp" />

    <com.example.a21753725a.overwatchstats.CustomTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rnkdPlayed"
        android:textSize="24sp"
        android:text="PLAYED GAMES"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        app:layout_constraintTop_toBottomOf="@+id/type"
        android:layout_marginTop="8dp" />

    <com.example.a21753725a.overwatchstats.CustomTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/PlayedN"
        android:textSize="24sp"
        android:text="PLAYED:"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/rnkdPlayed"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:textColor="#000000" />

    <com.example.a21753725a.overwatchstats.CustomTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rnkdWins"
        android:textSize="24sp"
        android:text="WON GAMES"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        app:layout_constraintTop_toBottomOf="@+id/PlayedN"
        android:layout_marginTop="16dp" />

    <com.example.a21753725a.overwatchstats.CustomTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/winN"
        android:textSize="24sp"
        android:text="WINS:"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/rnkdWins"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:textColor="#00E30F" />

</android.support.constraint.ConstraintLayout>
